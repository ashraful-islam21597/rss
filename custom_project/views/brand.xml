<odoo>
    <!-- list (List) View -->
    <record id="view_buyer_brand_list" model="ir.ui.view">
        <field name="name">buyer.brand.list</field>
        <field name="model">buyer.brand</field>
        <field name="arch" type="xml">
            <list string="Brands">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_buyer_brand_form" model="ir.ui.view">
        <field name="name">buyer.brand.form</field>
        <field name="model">buyer.brand</field>
        <field name="arch" type="xml">
            <form string="Brand">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_buyer_brand" model="ir.actions.act_window">
        <field name="name">Brands</field>
        <field name="res_model">buyer.brand</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_buyer_brand_root"
              name="Brands"
              parent="project.menu_project_config"
              action="action_buyer_brand"
              sequence="30"/>
</odoo>
