<odoo>
    <!-- list (List) View -->
    <record id="view_buyer_party_list" model="ir.ui.view">
        <field name="name">party.buyer.list</field>
        <field name="model">party.buyer</field>
        <field name="arch" type="xml">
            <list string="Brands">
                <field name="name"/>
                <field name="user_ids"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_party_buyer_form" model="ir.ui.view">
        <field name="name">party.buyer.form</field>
        <field name="model">party.buyer</field>
        <field name="arch" type="xml">
            <form string="Brand">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_party_buyer" model="ir.actions.act_window">
        <field name="name">Buyer</field>
        <field name="res_model">party.buyer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_buyer_party_root"
              name="Buyer"
              parent="project.menu_project_config"
              action="action_party_buyer"
              sequence="30"/>
</odoo>
