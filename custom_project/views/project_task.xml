<odoo>
    <record id="view_task_form_inherit_custom_fields" model="ir.ui.view">
        <field name="name">project.task.form.inherit.custom.fields</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='project']" position="after">
                <field name="po"/>
                <field name="vendor_id"/>
                <field name="buyer_id"/>
                <field name="is_closed" invisible="1"/>
<!--                <field name="layout_file" filename="layout_filename" widget="binary"/>-->
<!--                <field name="layout_filename" invisible="1"/>-->
            </xpath>

             <xpath expr="//sheet/group" position="attributes">
                <attribute name="col">3</attribute>
            </xpath>

            <xpath expr="//sheet/group/group[1]" position="attributes">
                <attribute name="string">Admin</attribute>
            </xpath>

            <xpath expr="//div[@id='date_deadline_and_recurring_task']" position="attributes">
                 <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//label[@for='date_deadline']" position="attributes">
                 <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//sheet/group/group[1]" position="after">
                <group string="Vendor">
                    <field name="country_id"/>
                    <field name="brand_id"/>
                    <field name="order_qty"/>
<!--                    <field name="garments_file" filename="garments_filename" widget="binary"/>-->
<!--                    <field name="garments_filename" invisible="1"/>-->
<!--                    <field name="dump_filename" invisible="1"/>-->
<!--                    <field name="dump_file" filename="dump_filename" widget="binary"/>-->
                    <field name="date_deadline" widget="date"/>
                    <field name="style"/>
                    <field name="task_id" />
                    <field name="color" />
<!--                    <field name="color_code_text" readonly="1"/>-->
                </group>
            </xpath>
            <xpath expr="//sheet/group/group[3]" position="attributes">
                <attribute name="string">Buyer</attribute>
            </xpath>

             <xpath expr="//sheet/group/group[3]" position="inside">
                <field name="approved_date"/>
                 <field name="approved_by"/>
                <field name="note"/>
            </xpath>
            <xpath expr="//notebook/page[@name='extra_info']" position="after">
                <page string="Vendor Documents">
                    <group string="Dump Files">
                        <field name="dump_attachment_ids" widget="many2many_binary" options="{'no_create': True}"/>
                    </group>
                    <group string="Garments Files">
                        <field name="garments_attachment_ids" widget="many2many_binary" options="{'no_create': True}"/>
                    </group>
                </page>
            </xpath>


        </field>
    </record>
