<odoo>
    <!-- list View -->
    <record id="view_project_purchase_order_list" model="ir.ui.view">
        <field name="name">project.purchase.order.list</field>
        <field name="model">project.purchase.order</field>
        <field name="arch" type="xml">
            <list string="Project Purchase Orders">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_project_purchase_order_form" model="ir.ui.view">
        <field name="name">project.purchase.order.form</field>
        <field name="model">project.purchase.order</field>
        <field name="arch" type="xml">
            <form string="Project Purchase Order">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_project_purchase_order" model="ir.actions.act_window">
        <field name="name">Project Purchase Orders</field>
        <field name="res_model">project.purchase.order</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item (under Project menu) -->
    <menuitem id="menu_project_purchase_root"
              name="Project Purchase Orders"
              parent="project.menu_project_config"
              action="action_project_purchase_order"
              sequence="20"/>
</odoo>
