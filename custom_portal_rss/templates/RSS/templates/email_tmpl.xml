<odoo>
    <data noupdate="1">

        <record id="email_template_task_created" model="mail.template">
            <field name="name">Task Created Notification</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="subject">New Task: ${object.name}</field>
            <field name="email_from">${(user.email_formatted or '')|safe}</field>
            <field name="email_to">${object.partner_id.email or ''}</field>
            <field name="body_html">
                <![CDATA[
                <p>Hello ${object.partner_id.name},</p>
                <p>A new task "<strong>${object.name}</strong>" has been created.</p>
                <p>Thank you,<br/>${user.name}</p>
                ]]>
            </field>
        </record>

    </data>
</odoo>
